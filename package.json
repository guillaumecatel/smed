{
  "name": "smed",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "engineStrict": true,
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "pnpm run -r build",
    "clean": "pnpm run -r clean",
    "commitlint": "commitlint",
    "dev": "pnpm run -r dev",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "syncpack": "syncpack format && syncpack list-mismatches",
    "syncpack:fix": "syncpack format && syncpack fix-mismatches",
    "syncpack:update": "syncpack update",
    "test": "pnpm run -r test",
    "test:e2e": "pnpm run -r test:e2e",
    "test:integration": "pnpm run -r test:integration",
    "test:unit": "pnpm run -r test:unit",
    "typecheck": "pnpm run -r typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@types/node": "25.0.10",
    "husky": "9.1.7",
    "prettier": "3.8.1",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-sh": "0.18.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "shx": "0.4.0",
    "syncpack": "13.0.4"
  },
  "pnpm": {
    "overrides": {
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "diff@>=5.0.0 <5.2.2": ">=5.2.2"
    }
  }
}
