{
  "name": "smed",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "engineStrict": true,
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && shx rm -rf {node_modules,.turbo}",
    "commitlint": "commitlint",
    "dev": "turbo run dev",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "syncpack": "syncpack format && syncpack list-mismatches",
    "syncpack:fix": "syncpack format && syncpack fix-mismatches",
    "syncpack:update": "syncpack update",
    "test": "turbo run test:unit test:integration test:e2e",
    "test:e2e": "turbo run test:e2e",
    "test:integration": "turbo run test:integration",
    "test:unit": "turbo run test:unit",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@types/node": "25.0.10",
    "eslint": "9.39.2",
    "eslint-config-all": "workspace:*",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-sh": "0.18.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "shx": "0.4.0",
    "syncpack": "13.0.4",
    "turbo": "2.7.6"
  },
  "pnpm": {
    "overrides": {
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "diff@>=5.0.0 <5.2.2": ">=5.2.2"
    }
  }
}
