{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },

  "prettier.requireConfig": true,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "css",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc",
    "json5",
    "markdown"
  ]
}
